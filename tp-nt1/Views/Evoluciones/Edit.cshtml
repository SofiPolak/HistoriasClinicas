@model tp_nt1.Models.Evolucion

@{
    ViewData["Title"] = "Editar";
}


<h4>Evolucion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DescripcionAtencion" class="control-label">Descripcion</label>
                <textarea asp-for="DescripcionAtencion" class="form-control"></textarea>
                <span asp-validation-for="DescripcionAtencion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-info btn-sm" />
            </div>
        </form>
        </div>
    </div>

    <div>
        <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@Model.Id">Volver</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
