@model tp_nt1.Models.Evolucion

@{
    ViewData["Title"] = "Detalles";
}

<div>
    <h4>Evolucion</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaYHoraInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaYHoraInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaYHoraAlta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaYHoraAlta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaYHoraCierre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaYHoraCierre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionAtencion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescripcionAtencion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoAbierto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstadoAbierto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Episodio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Episodio.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Profesional)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profesional.Apellido)
        </dd>
    </dl>
</div>
<div>

    <a class="btn btn-outline-info btn-sm" asp-controller="Evoluciones" asp-action="MiEvolucion" asp-route-evolucionId="@Model.Id">Ver notas</a>
    @if (User.IsInRole(nameof(Rol.Profesional)))
    {
        if (Model.EstadoAbierto)
        {
            <a class="btn btn-outline-info btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Actualizar</a>
            <a class="btn btn-outline-info btn-sm" asp-controller="Evoluciones" asp-action="CerrarEvolucion" asp-route-evolucionId="@Model.Id">Cerrar evolucion</a>
        }
    }
    <a class="btn btn-outline-info btn-sm" asp-controller="Episodios" asp-action="MiEpisodio" asp-route-id="@Model.EpisodioId">Volver</a>
</div>
