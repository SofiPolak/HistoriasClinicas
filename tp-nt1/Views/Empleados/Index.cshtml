@model IEnumerable<tp_nt1.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-outline-info" asp-action="Create">+ Nuevo empleado</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Legajo)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Legajo)
            </td>          
        <td>
            <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Ver info</a>
        </td>
        </tr>
}
    </tbody>
</table>
