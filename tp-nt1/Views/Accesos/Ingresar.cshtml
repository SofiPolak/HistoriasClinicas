@{
    Layout = "_LayoutLogin";
}

<div class="text-center">
    <h1>Bienvenido al portal de Historias Clinicas</h1>
</div>

<hr />

<div class="row">
    <div class="col-lg-offset-4 col-md-4">
        <form method="post" asp-action="Ingresar">
            <div class="text-danger">
                @ViewBag.Error
            </div>
            <div class="form-group">
                <label laber-for="rol" class="control-label">Rol:</label>
                <input name="rol" type="radio" value="@Rol.Empleado" /> @Rol.Empleado.ToString()
                <input name="rol" type="radio" value="@Rol.Paciente" /> @Rol.Paciente.ToString()
                <input name="rol" type="radio" value="@Rol.Profesional" /> @Rol.Profesional.ToString()
            </div>
            <div class="form-group">
                <label laber-for="username" class="control-label">Nombre de usuario:</label>
                <input name="username" class="form-control" type="text" value="@ViewBag.Username" />
            </div>
            <div class="form-group">
                <label label-for="Password" class="control-label">Contraseña:</label>
                <input name="password" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
