                <div class="d-flex justify-content-center links">
                    ¿No tenes una cuenta?  <a href="@Url.Action("Create", "Pacientes")" class="elements"> Crearla</a>
                </div>
                <div class="d-flex justify-content-center">
                    <a href="#">¿Olvidaste tu Password?</a>
                </div>
            </div>-->
        </form>
    </div>
</div>

