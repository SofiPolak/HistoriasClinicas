@{
    ViewData["Title"] = "HC - Historias Clinicas";
}

<div class="bg-image">

        <div class="text-center">
            @*<img src="~/img/fondo.jpg" class="img-fluid" alt="Historias Clinicas" style="width:100%" , position="relative" >*@
            <h4 class="display-4"><b>Bienvenido</b></h4>
            <p>Comience a gestionar sus historias clinicas.</p>
        </div>
</div>
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="300-px-wide">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="../img/img.png" class="d-block w-100" alt="Historias Clinicas">
                    <div class="carousel-caption d-none d-md-block">
                            <h5 style="color:black;">Salud Digital</h5>
                        <p class="text-white bg-dark">La historia clinica en tu dispositivo estes donde estes y cuando lo necesites.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="../img/img2.jpeg" class="d-block w-100" alt="Profesionales">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 style="color:black;">Profesionales de primer nivel</h5>
                        <p class="text-white bg-dark">La atencion de excelencia que buscas.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="../img/img3.jpeg" class="d-block w-100" alt="Servicio informatizado">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 style="color:black;">Rapidez y accesibilidad.</h5>
                        <p class="text-white bg-dark">Todos los beneficios de un servicio informatizado.</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-target="#carouselExampleCaptions" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleCaptions" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Siguiente</span>
            </button>
        </div>
    </div>
