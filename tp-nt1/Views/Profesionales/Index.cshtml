@model IEnumerable<tp_nt1.Models.Profesional>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class= "btn btn-outline-info" asp-action="Create">+ Nuevo Profesional</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>          
        <td>
            <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Ver info</a>
        </td>
        </tr>
}
    </tbody>
</table>
