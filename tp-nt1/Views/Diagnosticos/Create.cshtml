                <label asp-for="Recomendacion" class="control-label"></label>
                <textarea asp-for="Recomendacion" class="form-control" ></textarea>
                <span asp-validation-for="Recomendacion" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Epicrisis" class="control-label"></label>
                <select asp-for="EpicrisisId" class ="form-control" asp-items="ViewBag.EpicrisisId"></select>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-info btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-info btn-sm">Volver</a>
</div>

@section Scripts {
